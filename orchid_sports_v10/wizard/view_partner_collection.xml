<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_partner_collection_wizard" model="ir.ui.view">
            <field name="name">partner.collection.wizard.form</field>
            <field name="model">partner.collection.wizard</field>
            <field name="arch" type="xml">
                <form string="Student Profile">
                    <sheet>
                        <group>
                            <group>
                                <field name="partner_id" readonly="1"/>
                                <label for="street" string="Address"/>
                                <div class="o_address_format">
                                    <field name="street" placeholder="street..." class="o_address_street" readonly="1"/>
                                    <field name="street2" placeholder="street 2..." class="o_address_street" readonly="1"/>
                                    <field name="city" placeholder="City" readonly="1"/>
                                    <field name="state_id" class="o_address_state" placeholder="State" readonly="1"/>
                                    <field name="zip" placeholder="ZIP" class="o_address_zip" readonly="1"/>
                                    <field name="country_id" placeholder="Country" class="o_address_country" readonly="1"/>
                                </div>
                            </group>
                            <group>
                                <field name="mobile" readonly="1"/>
                                <field name="email" readonly="1"/>
                                <field name="od_gender" readonly="1"/>
                                <field name="od_age" readonly="1"/>
                                <field name="od_dob" readonly="1"/>
                                <field name="school_id" readonly="1"/>
                                <field name="racket_info" readonly="1"/>
                            </group>
                        </group>
                    
                        <notebook>
                            <page string="Collection">
                                <field name="wizard_line_ids" readonly="1">
                                    <list>
                                        <field name="rv_no"/>
                                        <field name="total"/>
                                        <field name="type_id"/>
                                        <field name="date"/>
                                        <field name="no_of_clases"/>
                                        <field name="coach_id"/>
                                        <field name="lesson_taken"/>
                                        <field name="pending_lesson"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <footer>
                        <button name="print_report" type="object" string="Print"/>
                    </footer>
               </form>
            </field>
        </record>

        <record id="action_view_partner_collection_wizard" model="ir.actions.act_window">
            <field name="name">Student Profile</field>
            <field name="res_model">partner.collection.wizard</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="view_partner_collection_wizard"/>
            <field name="target">new</field>
        </record>

