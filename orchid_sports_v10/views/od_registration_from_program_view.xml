<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="od_registration_from_program_sports_list" model="ir.ui.view">
        <field name="name">od.activities.list</field>
        <field name="model">od.activities</field>
        <field name="priority">60</field>
        <field name="arch" type="xml">
            <list string="Registration" create="false">
                <field name="name"/>
                <field name="start_date"/>
                <field name="end_date"/>
            </list>
        </field>
    </record>

    <record id="od_registration_from_program_sports_form" model="ir.ui.view">
        <field name="name">od.activities.form</field>
        <field name="model">od.activities</field>
        <field name="priority">60</field>
        <field name="arch" type="xml">
            <form string="Registration" create="false">
                <sheet>
                    <h1>
                        <field name="name" placeholder="Program summary..." class="oe_inline" readonly="1"/>
                    </h1>

                    <group>
                        <group>
                            <field name="start_date" readonly="1"/>
                        </group>
                        <group>
                            <field name="end_date" readonly="1"/>
                            <field name="types" required="True" readonly="1" invisible="1"/>
                            <field name="venue_id" readonly="1" invisible="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Registration">
                            <field name="registration_line">
                                <list editable="top">
                                    <field name="activities_id" invisible="1" string="Name"/>
                                    <field name="partner_id"/>
                                    <field name="rv_no" string="Mobile"/>
                                    <field name="payment_type_account_id" invisible="1"/>
                                    <field name="types" invisible="1"/>
                                    <field name="email"/>
                                    <field name="od_dob"/>
                                    <field name="city"/>
                                    <field name="school_id"/>
                                    <field name="no_of_classes" invisible="1"/>
                                    <field name="remarks" invisible="1"/>
                                    <field name="amount" sum="Total" invisible="1"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_od_registration_activities_sports" model="ir.actions.act_window">
        <field name="name">Registration</field>
        <field name="res_model">od.activities</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Click to add new Registration.
            </p>
        </field>
    </record>

