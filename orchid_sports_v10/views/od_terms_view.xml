<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- List view -->
        <record id="od_terms_list" model="ir.ui.view">
            <field name="name">od.terms.list</field>
            <field name="model">od.terms</field>
            <field name="arch" type="xml">
                <list string="Terms">
                    <field name="name"/>
                    <field name="product_id"/>
                </list>
            </field>
        </record>

        <!-- Search view -->
        <record id="od_terms_search" model="ir.ui.view">
            <field name="name">od.terms.search</field>
            <field name="model">od.terms</field>
            <field name="arch" type="xml">
                <search string="Terms">
                    <field name="name"/>
                    <field name="product_id"/>

                    <group expand="0" string="Group By">
                        <filter string="Product" name="group_product" context="{'group_by': 'product_id'}"/>
                        <filter string="Name"    name="group_name"    context="{'group_by': 'name'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Form view -->
        <record id="od_terms_form" model="ir.ui.view">
            <field name="name">od.terms.form</field>
            <field name="model">od.terms</field>
            <field name="arch" type="xml">
                <form string="Terms">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="product_id" required="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action -->
        <record model="ir.actions.act_window" id="action_od_employee_term">
            <field name="name">Term</field>
            <field name="res_model">od.terms</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Click to add new Term.</p>
            </field>
        </record>

        <!-- Menu -->
        <menuitem id="od_empoyee_term_menu"
                  name="Term"
                  parent="menu_sports_configuration"
                  action="action_od_employee_term"
                  sequence="2"/>
    </data>
</odoo>
