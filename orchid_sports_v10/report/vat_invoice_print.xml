<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>


        <template id="report_vat_invoice">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.html_container">
                    <t t-call="web.external_layout">
                        <div class="page" style="margin: 30px;font-size:13px">
                            <div class="row" style="text-align:center;">
                                <h4>
                                    <b>TAX INVOICE
                                        <br/>
                                        <span style="font-family:arial">فاتورة ضريبية</span>
                                    </b>
                                    <br/>

                                    <span style="margin-top:5px"><h6><b>TRN No. <span t-field="o.company_id.vat"/></b></h6></span>
                                </h4>


                            </div>

                            <br/>

                            <div style="display: flex; justify-content: space-between;" class="row">
                                <div style="width: 60%;" class="col">
                                    <span><b>To:</b></span><br/>
                                    <address t-field="o.partner_id" t-options="{'widget': 'contact', 'fields': ['address', 'name'], 'no_marker': True}" style="line-height: 1.4;"/>
                                </div>

                                <div style="text-align: right; width: 40%;" class="col">
                                    <span><b>Date:</b> <span t-field="o.invoice_date"/></span><br/>
                                    <span><b>Invoice No:</b> <span t-field="o.name"/></span>
                                </div>
                            </div>

                            <br/>

                            <t t-set="sno" t-value="1"/>
                            <table class="table table-condensed" style="width:100%; border:1px solid grey; border-collapse: collapse; ">
                                <thead style="background-color:#f8f8f8;">
                                    <tr>
                                        <th style="width:5%; border:1px solid grey; text-align:center;">Sr. No.</th>
                                        <th style="width:40%; border:1px solid grey; text-align:center;">Description</th>
                                        <th style="width:10%; border:1px solid grey; text-align:center;">Qty</th>
                                        <th style="width:15%; border:1px solid grey; text-align:center;">Amount Excl. VAT</th>
                                        <th style="width:10%; border:1px solid grey; text-align:center;">VAT Amount</th>
                                        <th style="width:15%; border:1px solid grey; text-align:center;">Amount Incl. VAT</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    <t t-foreach="o.invoice_line_ids" t-as="line">
                                        <tr>
                                            <td style="border:1px solid grey; text-align:center;">
                                                <span t-esc="sno"/><t t-set="sno" t-value="sno+1"/>
                                            </td>
                                            <td style="border:1px solid grey; padding-left:5px;">
                                                <span t-field="line.name"/>
                                            </td>
                                            <td style="border:1px solid grey; text-align:right;">
                                                <span t-esc="'%.2f' % line.quantity"/>
                                            </td>
                                            <td style="border:1px solid grey; text-align:right;">
                                                <span t-esc="'%.2f' % line.price_subtotal"/>
                                            </td>
                                            <td style="border:1px solid grey; text-align:right;">
                                                <t t-if="line.od_tax_amount">
                                                    <span t-esc="'%.2f' % line.od_tax_amount"/>
                                                </t>
                                            </td>
                                            <td style="border:1px solid grey; text-align:right;">
                                                <span t-esc="'%.2f' % line.od_net_amount"/>
                                            </td>
                                        </tr>
                                    </t>

                                    <tr>
                                        <td colspan="2" style="border:1px solid grey; text-align:right; font-weight:bold;">TOTAL</td>
                                        <td style="border:1px solid grey;"/>
                                        <td style="border:1px solid grey; text-align:right;">
                                            <span t-esc="'%.2f' % o.amount_untaxed"/>
                                        </td>
                                        <td style="border:1px solid grey; text-align:right;">
                                            <t t-if="o.amount_tax">
                                                <span t-esc="'%.2f' % o.amount_tax"/>
                                            </t>
                                        </td>
                                        <td style="border:1px solid grey; text-align:right;">
                                            <span t-esc="'%.2f' % o.amount_total"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>


                            <div>
                                (AED <span t-esc="o.currency_id.amount_to_text(o.amount_total)"/> only)
                            </div>


                            <br/><br/>

                            <div style="line-height: 1.5;">
                                <b>Bank Details:</b><br/>
                                <b>C.F.T SPORTS SERVICES LLC</b><br/>
                                Bank: Emirates NBD<br/>
                                Branch: Dubai Festival City, Dubai, UAE<br/>
                                Account No.: 101 4047620 901<br/>
                                IBAN: AE190260001014047620901<br/>
                                Swift Code: EBILAEAD
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>

        <record id="action_report_vat_invoice_print" model="ir.actions.report">
            <field name="name">Vat Invoice Print</field>
            <field name="model">account.move</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">orchid_sports_v10.report_vat_invoice</field>
            <field name="report_file">orchid_sports_v10.report_vat_invoice</field>
            <field name="binding_model_id" ref="model_account_move"/>
            <field name="binding_type">report</field>
        </record>


    </data>
</odoo>