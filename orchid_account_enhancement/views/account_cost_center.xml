<?xml version="1.0" encoding="UTF-8"?>
<odoo>
        <record model="ir.ui.view" id="orchid_accont_cost_center_list_view">
            <field name="name">orchid.account.cost.center.list</field>
            <field name="model">orchid.account.cost.center</field>
            <field name="type">list</field>
            <field name="arch" type="xml">
			    <list string="list_string">
					<field name="name" />
					<field name="code" />
					<field name="seq" />
					<field name="branch_id" />
					<field name="div_id" />
					<field name="div_mgr_id" />
					<!-- <field name="target" /> -->
                </list>
            </field>
        </record>

        <record model="ir.ui.view" id="orchid_accont_cost_center_form_view">
            <field name="name">orchid.account.cost.center.form</field>
            <field name="model">orchid.account.cost.center</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="form_string">
					<sheet><group>
						<group>
							<field name="code" placeholder="Code" />
                            <field name="name" placeholder="Name" />
                            <field name="seq" />
                          </group> 
                       <group> 
					<field name="branch_id" />
					<field name="div_id" />
					<field name="div_mgr_id" />
					<field name="target" />
					
						</group>
						</group>
					</sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_orchid_accont_cost_center_list_view">
            <field name="name">Account Cost Center</field>
            <field name="res_model">orchid.account.cost.center</field>

            <field name="view_mode">list,form</field>
            <field name="view_id" ref="orchid_accont_cost_center_list_view"/>
        </record>

		<menuitem id="orchid_accont_cost_center_menu" name="Cost Center" parent="account.account_account_menu" action="action_orchid_accont_cost_center_list_view" sequence="12"/>
    
</odoo>
