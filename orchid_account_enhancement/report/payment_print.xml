<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="report_account_payment">
	<t t-name="orchid_account_enhancement.report_account_payment">
    <!-- <t t-call="report.external_layout"> -->
        <t t-foreach="docs" t-as="o">
            <div class="page">
                <div class="row">
                    <div class="col-xs-4">
                            <img t-if="o.company_id.logo" t-att-src="'data:image/png;base64,%s' % o.company_id.logo" style="max-height: 100px;"/>
                    </div>
                    <strong>    
                        <div class="col-xs-8">
                            <h4><span t-field="o.company_id" /></h4>
                            <span t-field="o.company_id.street"/><span t-field="o.company_id.zip"/>
                            <span t-field="o.company_id.state_id"/>,<br/>
                            <span t-field="o.company_id.city"/>,
                            <span t-field="o.company_id.country_id"/><br/>
                            Tel: <span t-field="o.company_id.phone"/> Fax: <span t-field="o.company_id.fax"/>
                        </div>
                    </strong>
                </div>
                    <br/>
                    <div t-if="o.payment_type=='inbound'">
                        <div class="col-xs-12" ><h4><center><strong>Receipt Voucher</strong></center></h4></div>
                    </div>
                    <div t-if="o.payment_type=='outbound'">                                     
                        <div class="col-xs-12" >
                            <h4><center><strong>Payment Voucher</strong></center></h4>
                        </div>
                    </div>
                    <div><br/></div><div><br/></div><div><br/></div>
                    <div class="row">
                        <div t-if="o.payment_type=='inbound' and o.name" class="col-xs-6">
                            <strong>Receipt Voucher No.: </strong><span t-field="o.name"/>                      
                        </div>
                        <div t-if="o.state == 'draft' "><h4><strong>DRAFT </strong></h4></div>
                        <div t-if="o.payment_type=='outbound' and o.name" class="col-xs-6">
                            <strong>Payment Voucher No: </strong><span t-field="o.name"/>                       
                        </div>
                        <div class="text-right" >
                            <right><strong>Date: </strong><span t-field="o.payment_date"/></right>
                        </div>                  
                    </div>
                    <div><br/></div>
                    
                    <div class="row" style="border: 1px solid black;" >
                        <div class="col-xs-8">
                            <div class="col-xs-12" style="padding-left:0px;">
                                <div t-if="o.payment_type=='inbound'"><strong>Customer Name :</strong><span t-field="o.partner_id"/>    
                                </div>  
                                <div t-if="o.payment_type=='outbound'" ><strong>Supplier Name :</strong><span t-field="o.partner_id"/>
                                </div>  
                            </div>
                        </div>
                        <div class="col-xs-4">
                            <div class="col-xs-12">
                                <div t-if="o.amount" ><strong>Paid Amount: </strong><span t-field="o.amount"/>
                                </div>   
                            </div>
                            <div class="col-xs-12">
                                <div t-if="o.amount" ><strong>Payment method: </strong><span t-field="o.journal_id"/>
                                </div>          
                            </div>
                            <div class="col-xs-12">
                                <div t-if="o.communication" ><strong>Reference: </strong><span t-esc="o.communication"/>
                                </div>          
                            </div>     
                            <div class="col-xs-12">
                                <div t-if="o.od_check_no" ><strong>Cheque No: </strong><span t-field="o.od_check_no"/>
                                </div>   
                            </div>
                            <div class="col-xs-12">
                                <div t-if="o.od_check_date"><strong>Cheque Date: </strong><span t-field="o.od_check_date"/>
                                </div>
                            </div>
                        </div>
                    </div>
                <br/>
                <div class="row">
                    <table class="table table-condensed" style="border:1px solid black;">
                        <thead >
                            <tr>
                            <th class="text-left" style="border-left:1px solid black; width:40%">Reference</th>
                            <th class="text-center" style="border-left:1px solid black; width:40%">Description</th>
                            <th class="text-center" style="border-left:1px solid black; width:20%">Amount</th>
                            </tr>
                        </thead>
                        <tbody> 
                            <tr t-foreach="matching_lines" t-as="line" style="border:1px solid black;" t-if="line['credit']>0">
                                <td class="text-left" style="border-right:1px solid black;"><span t-esc="line['number']"/></td>
                                <td class="text-left" style="border-right:1px solid black;"><span t-esc="line['name']"/></td>
                                <td class="text-riht"><span t-esc="line['credit']"/></td>
                            </tr>
                        </tbody>
                    </table>    
                        <table class="table table-condensed" style="border:1px solid black;">
                        <thead >
                            <tr>
                                <th class="text-left" style="border-left:1px solid black; width:40%">Reference</th>
                                <th class="text-center" style="border-left:1px solid black; width:40%">Description</th>
                                <th class="text-center" style="border-left:1px solid black; width:20%">Amount</th>
                            </tr>
                        </thead>
                        <tbody> 
                            <tr t-foreach="matching_lines" t-as="line" style="border:1px solid black;" t-if="line['debit']>0">
                                <td class="text-left" style="border-right:1px solid black;"><span t-esc="line['number']"/></td>
                                <td class="text-left" style="border-right:1px solid black;"><span t-esc="line['name']"/></td>
                                <td><span t-esc="line['debit']"/></td>
                            </tr>
                        </tbody>
                    </table>    
                </div>
                <div t-if="o.amount"  class="row" style="border: 1px solid black;">
                        <div class="col-xs-3"><strong>The Amount Of    </strong>
                        </div>
                        <div class="col-xs-9">
                            : <strong><span t-field="o.currency_id"/>  <span t-field="o.amount"/> /-</strong></div>
                        <br/>
                            <div class="col-xs-3">
                            <strong>Amount in Words </strong>
                        </div>
                        <div class="col-xs-9">
                        : <strong> Only <span t-esc="o.amount" t-esc-options='{"widget": "num2words","case":"capital"}'/> UAE Dirham</strong>
                        </div>
                </div>
                <br/><br/><br/>
                <div class="row" >
                    <div class="col-xs-4" style="text-align:center;">
                        <strong>____________________</strong><br/>
                        <strong>Prepared by</strong><br/>
                        <strong><span t-field="o.create_uid"/></strong><br/>
                    </div>
                    <div class="col-xs-4" style="text-align:center;">
                        <strong>____________________ </strong><br/>
                        <strong>Checked By</strong><br/>                    
                    </div>
                    <div class="col-xs-4" style="text-align:center;">
                        <strong>____________________</strong><br/>
                        <strong>Received By</strong><br/>
                    </div>
                </div> 
                <br/>
                <div class="col-xs-12" style="text-align:center;"><b>This is a system generated document does not require a signature</b></div>
                          <div class="oe_structure"/>
            </div>
        </t> 
    <!-- </t> -->
</t>    
</template>
</odoo>