<odoo>
    <data>
        
         <record model="ir.ui.view" id="header_img">
            <field name="name">res.company.header.img</field>
            <field name="model">ir.header_img</field>
            <field name="arch" type="xml">
                <form string="Header Image">
                    <field name="img" widget="image" class="oe_left"/>
                    <group>
                        <field name="name"/>
                        <field name="type"/>
                        <field name="company_id"/>
                    </group>
                </form>
            </field>
        </record>
        
        
        <record model="ir.ui.view" id="currency_del_img_bfly">
            <field name="name">res.company.form.inherit</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook[last()]" position="inside">
                    <page string="Report Cofiguration">
	                    <group string="Configuration (Orchid)" col="2">
	                        <field name="header_image"/>
	                    </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>

