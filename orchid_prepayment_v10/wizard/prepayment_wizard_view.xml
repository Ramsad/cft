<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="prepayment_wizard_form" model="ir.ui.view">
        <field name="name">Prepayment</field>
        <field name="model">prepayment.wizard</field>
        <field name="arch" type="xml">
            <form string="Prepayment">
                <group>
                    <group>
                        <field name="date_start" required="1"/>
                        <field name="date_to" required="1"/>
                    </group>
                    <group>
                    </group>

                </group>


                <footer>
                    <button name="generate" string="Generate" type="object"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="prepayment_wizard_action" model="ir.actions.act_window">
        <field name="name">Prepayment Entry</field>

        <field name="res_model">prepayment.wizard</field>

        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem action="prepayment_wizard_action" id="menu_prepayment_wizard_action" parent="account.menu_finance_entries"
              sequence="53"/>

</odoo>
