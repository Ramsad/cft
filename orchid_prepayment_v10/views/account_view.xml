<odoo>
    <data>
        <record model="ir.ui.view" id="od_account_move_form">
            <field name="name">account.move.form</field>
            <field name="model">account.move</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">

                <button name="open_reconcile_view" position="after">
                    <button name="open_prepayment_view" class="oe_stat_button" icon="fa-bars" type="object"
                            string="Prepayment Lines"
                            invisible="['|',('od_is_prepayment','!=',True),('state','!=','posted')]">
                    </button>

                </button>
                <field name="company_id" position="after">
                    <field name="od_is_prepayment" invisible="1"/>
                </field>


            </field>
        </record>


    </data>
</odoo>
