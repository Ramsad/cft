<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="od_view_company_form" model="ir.ui.view">
            <field name="name">res.company.form</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"></field>
            <field name="arch" type="xml">
               <xpath expr="/form/sheet/div[@class='oe_title']/h3" position="after">
                  <label for="od_name_arabic" class="oe_edit_only"/>
                  <h3>
                      <field name="od_name_arabic" placeholder="Arabic Name"/>
                  </h3>
                  <label for="od_trn" class="oe_edit_only"/>
                  <h3>
                      <field name="od_trn" placeholder="TRN"/>
                  </h3>
              </xpath>
            </field>
    </record>
  </data>
</odoo>
